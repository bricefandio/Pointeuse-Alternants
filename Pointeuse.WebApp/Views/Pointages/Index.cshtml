@model IEnumerable<Pointeuse.WebApp.Models.PointageDto>

<h2>Suivi des présences</h2>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Étudiant</th>
            <th>Date et heure</th>
            <th>Statut</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var p in Model)
            {
                var color = p.Statut == "Présent" ? "table-success" : "table-danger";
                <tr class="@color">
                    <td>@p.EtudiantNom</td>
                    <td>@p.DateHeureScan.ToString("dd/MM/yyyy HH:mm")</td>
                    <td><strong>@p.Statut</strong></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center text-muted">Aucun pointage trouvé</td>
            </tr>
        }
    </tbody>
</table>
