<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Pointeuse.Maui.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Connexion">

	<VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">
		<Label Text="Connexion" FontSize="28" HorizontalOptions="Center" />
		<Entry x:Name="UsernameEntry" Placeholder="Nom d'utilisateur" />
		<Entry x:Name="PasswordEntry" Placeholder="Mot de passe" IsPassword="True" />
		<Button x:Name="LoginButton" Text="Se connecter" Clicked="OnLoginClicked" />
		<Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False" />
	</VerticalStackLayout>
</ContentPage>
